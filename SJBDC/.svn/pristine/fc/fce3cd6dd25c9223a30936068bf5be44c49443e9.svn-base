
html body{
	padding:0px;
	margin:0px;
	width:100%;
	height:100%;
}
.modal-container{
	position:absolute;
	width:100%;
	height:100%;
	padding:0px;
	margin:0px;
	
}

.modal-header {
	height: 60px;
	background: #2275DF;
	border-bottom: none;
	color: #fff;
	padding: 0;
}

.modal-title {
	height: 60px;
	line-height: 60px;
	font-size: 16px;
	padding: 0px !important;
	margin-left: 20px;
}

.close {
	height: 60px;
	line-height: 60px;
	font-size: 16px;
	padding: 0px !important;
	margin-right: 20px;
	font-size: 20px;
}
.modal-body{
	height:-moz-calc(100% -60px);
	height:-webkit-calc(100% - 60px);
	height: calc(100% - 60px);
	width:100%;
	padding:0px;
}
.container{
	width:100%;
	height:100%;
	padding:0;
	position:relative;
}

.nav-tabs li {
	width:15%;
	text-align: center;
	border: none;
}

.nav-tabs a {
	color: #868686;
	font-size: 1.2rem;
	font-weight: normal;
	cursor: pointer;
}

.nav-tabs .active a {
	border: none !important;
	border-bottom: 2px solid #FF7E20 !important;
	color: #FF7E20 !important;
	font-weight: bold !important;
}

.nav-tabs li:hover {
	border: none;
}

.nav-tabs a:hover {
	background: #fff !important;
	border: none !important;
}

.tab-content .inner-box {
	position:relative;
	padding: 0px 15px
}

.col-xs-9{
	position: relative;
	height:100%;
}
.tab-content{
}

.tab-content::-webkit-scrollbar {
		  width: 5px;
	}
	
.tab-content::-webkit-scrollbar-thumb {
		  background-color: rgba(0, 0, 0, 0.2); 
	}
.inner-box .table-title {
	border-left: 5px solid #318AFE;
	padding-left: 10px;
	margin: 20px 0;
	color: #808080;
	font-size: 1.2rem;
	font-weight: 100;
}

.tab-content .table-box {
	width: 100%;
}

.table-box td:nth-child(2n+1) {
	background: #EBF3F6;
	color: #969999;
}

.table-box td {
	text-align: center;
	padding: 7px 0;
	font-size: 14;
	border: 1px solid #d8d8d8;
}

.active:{
	background:#f68226;
}

.active-box .text-icon {
	background: #FF6B01 !important;
}

.table-normal{
	text-align: center;
	border:1px solid #d8d8d8;
	
}
.table-normal thead tr td{
	border:1px solid #d8d8d8;
	font-size:.95rem;
	padding: 7px 0px;
	background:#EBF3F6;
	color:#969999; 
}
.table-normal tbody tr td{
 	text-align: center;
	padding: 7px 0;
	font-size: .95rem;
	border: 1px solid #d8d8d8;}

.modal-lg {
	width: 1200px;
}

.closeIncon{
	width:16px;
	height:16px;
	background:url("image/close.png") no-repeat;
	background-position: -1px;
	border:none;
	float:right;
	margin-top:18px;
	margin-right:16px;
}