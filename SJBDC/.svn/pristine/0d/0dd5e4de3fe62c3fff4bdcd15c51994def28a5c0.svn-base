.pageContainer {
    background: #f5f5f5;
}

.userInfo,
.headerContainer,
.pageBody,
.pageFooter-func,
.copyrightInfo p{
    width: 1000px;
    margin: 0 auto;
}

/* ==== 页面头部 ==== */

.pageHeader {
    height: 110px;
}

.pageBanner {
    background: #2c6bd2;
    text-align: center;
}

.siteTop {
    height: 30px;
    padding-right: 20px;
    text-align: right;
    background: #333;
    font-size: 12px;
    line-height: 30px;
    color: #fff;
}

.siteTop a {
    color: #fff;
    text-decoration: underline;
}

.siteLogo {
    float: left;
    margin: 10px 20px 0 0;
}

/* ==== 主导航 ==== */

.mainNav {
    float: right;
    margin: 20px 20px 0 0;
}

.mainNav li {
    float: left;
    padding: 10px;
    list-style: none;
}

.mainNav a {
    font-size: 14px;
    color: #545454;
    text-decoration: none;
}


#homePage #homeNavItem,
#shopPage #shopNavItem,
.mainNav .active {
    background: #0386e1;
}

#homePage #homeNavItem a,
#shopPage #shopNavItem a,
.mainNav .active a {
    color: #fff;
}

/* ==== 页脚 ==== */

.pageFooter {
    background: #444;
}

.pageFooter, .pageFooter a{
    color: #fff;
}

.pageFooter-menu {
    float: left;
    margin-right: 20px;
}

.focusMe,
.credit {
    float: right;
    margin-left: 20px;
}

.copyrightInfo{
    background: #2f2f2f;
    text-align: center;
}
